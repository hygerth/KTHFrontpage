\def\makeititle{
  \begingroup
  \if@twocolumn 
  \onecolumn \m@keititle \twocolumn
  \else \newpage
  \global\@topnum\z@ \m@keititle \fi
  \endgroup
  \setcounter{footnote}{0}
  \thispagestyle{empty}
  \setcounter{page}{0} \newpage\pagecolor{white}
  \if@twoside 
      \setcounter{page}{0}\thispagestyle{empty}\cleardoublepage
  \fi
